<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:myapp="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eFFFFFFF"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@color/actionbar_background_color"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/ctv_center"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="30dp"
            android:layout_weight="1"
            android:ellipsize="end"
            android:gravity="center"
            android:singleLine="true"
            android:text="赛事"
            android:textColor="@color/action_bar_tittle_color"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/cbtn_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|right"
            android:layout_marginRight="10dp"
            android:background="@null"
            android:textColor="@color/white"
            android:textSize="17dp" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="160dp"
                android:src="@drawable/tupian" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/theme_tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:text="请输入联赛名称: "
                    android:textColor="@color/black"
                    android:textSize="15sp" />

                <com.hyphenate.chatuidemo.ui.NoteEditText
                    android:id="@+id/noteEditText_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:minLines="1"
                    android:textColor="@color/black"
                    android:textCursorDrawable="@drawable/edittext_curor"
                    android:textSize="20sp"
                    myapp:lineColor="#ff999999"
                    myapp:lineStrokeWidth="2"
                    myapp:padding="15dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/theme_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/theme_tv_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:text="请输入联赛地点: "
                    android:textColor="@color/black"
                    android:textSize="15sp" />

                <com.hyphenate.chatuidemo.ui.NoteEditText
                    android:id="@+id/noteEditText_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:minLines="1"
                    android:textColor="@color/black"
                    android:textCursorDrawable="@drawable/edittext_curor"
                    android:textSize="20sp"
                    myapp:lineColor="#ff999999"
                    myapp:lineStrokeWidth="2"
                    myapp:padding="15dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/theme_tv_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:text="请选择开始时间: "
                    android:textColor="@color/black"
                    android:textSize="15sp" />

                <com.hyphenate.chatuidemo.ui.NoteEditText
                    android:id="@+id/noteEditText_about"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:maxLength="300"
                    android:minLines="1"
                    android:textColor="@color/black"
                    android:textCursorDrawable="@drawable/edittext_curor"
                    android:textSize="20sp"
                    myapp:lineColor="#ff999999"
                    myapp:lineStrokeWidth="1"
                    myapp:padding="15dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_outtime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:text="请选择结束时间: "
                    android:textColor="@color/black"
                    android:textSize="15sp" />

                <com.hyphenate.chatuidemo.ui.NoteEditText
                    android:id="@+id/noteEditText_outtime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:maxLength="300"
                    android:minLines="1"
                    android:textColor="@color/black"
                    android:textCursorDrawable="@drawable/edittext_curor"
                    android:textSize="20sp"
                    myapp:lineColor="#ff999999"
                    myapp:lineStrokeWidth="1"
                    myapp:padding="15dp" />
            </LinearLayout>

            <Spinner
                android:id="@+id/spinner_main_edu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="20dp" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>